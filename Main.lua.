local CoreGui, Players, RunService, UserInputService = game:GetService("CoreGui"), game:GetService("Players"), game:GetService("RunService"), game:GetService("UserInputService")
local lplayer = Players.LocalPlayer

if CoreGui:FindFirstChild("WhiteCatHub") then CoreGui.WhiteCatHub:Destroy() end
local sg = Instance.new("ScreenGui", CoreGui); sg.Name = "WhiteCatHub"
local main = Instance.new("Frame", sg)
main.Size = UDim2.new(0, 350, 0, 480); main.Position = UDim2.new(0.5, -175, 0.3, 0)
main.BackgroundColor3 = Color3.fromRGB(255, 255, 255); main.Active = true; main.Draggable = true
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 15)

-- Tab Navigation
local tabContainer = Instance.new("Frame", main)
tabContainer.Size = UDim2.new(1, 0, 0, 40); tabContainer.Position = UDim2.new(0, 0, 0, 45); tabContainer.BackgroundTransparency = 1
local tabLayout = Instance.new("UIListLayout", tabContainer); tabLayout.FillDirection = "Horizontal"; tabLayout.HorizontalAlignment = "Center"; tabLayout.Padding = UDim.new(0, 5)

local pages = {}
local function CreateTab(name, active)
    local btn = Instance.new("TextButton", tabContainer)
    btn.Size = UDim2.new(0, 70, 0, 30); btn.Text = name; btn.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255); btn.Font = "GothamBold"; Instance.new("UICorner", btn)
    
    local pg = Instance.new("ScrollingFrame", main)
    pg.Size = UDim2.new(1, -20, 1, -150); pg.Position = UDim2.new(0, 10, 0, 90); pg.Visible = active or false; pg.BackgroundTransparency = 1; pg.ScrollBarThickness = 2
    Instance.new("UIListLayout", pg).Padding = UDim.new(0, 8)
    pages[name] = pg
    btn.MouseButton1Click:Connect(function() for _, p in pairs(pages) do p.Visible = false end pg.Visible = true end)
    return pg
end

local mainPg = CreateTab("Main", true)
local itemPg = CreateTab("Items")
local espPg = CreateTab("ESP")
local exploitPg = CreateTab("Misc")

local function AddBtn(pg, txt, cb)
    local b = Instance.new("TextButton", pg); b.Size = UDim2.new(1, 0, 0, 35); b.Text = txt
    b.BackgroundColor3 = Color3.fromRGB(245, 245, 245); b.Font = "Gotham"; Instance.new("UICorner", b)
    b.MouseButton1Click:Connect(cb)
end

-- ESP LOGIC
local function CreateESP(obj, color, name)
    if obj:FindFirstChild("CatESP") then return end
    local highlight = Instance.new("Highlight", obj)
    highlight.Name = "CatESP"
    highlight.FillColor = color
    highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    
    local bill = Instance.new("BillboardGui", obj)
    bill.Name = "CatESPText"
    bill.Size = UDim2.new(0, 100, 0, 50)
    bill.AlwaysOnTop = true
    bill.ExtentsOffset = Vector3.new(0, 3, 0)
    local label = Instance.new("TextLabel", bill)
    label.BackgroundTransparency = 1; label.Size = UDim2.new(1, 0, 1, 0)
    label.Text = name; label.TextColor3 = color; label.Font = "GothamBold"; label.TextSize = 12
end

local function RemoveESP(tag)
    for _, v in pairs(workspace:GetDescendants()) do
        if v.Name == tag or v:FindFirstChild("CatESP") then
            local h = v:FindFirstChild("CatESP")
            local b = v:FindFirstChild("CatESPText")
            if h then h:Destroy() end
            if b then b:Destroy() end
        end
    end
end

-- ESP TAB BUTTONS
local animalEsp = false
AddBtn(espPg, "üêæ Toggle Animal ESP", function()
    animalEsp = not animalEsp
    if not animalEsp then RemoveESP() return end
    task.spawn(function()
        while animalEsp do
            for _, v in pairs(workspace:GetDescendants()) do
                local n = v.Name:lower()
                if n == "wolf" or n == "bear" or n == "bunny" or n == "polar bear" then
                    CreateESP(v, Color3.fromRGB(255, 100, 100), v.Name)
                end
            end
            task.wait(2)
        end
    end)
end)

local itemEsp = false
AddBtn(espPg, "üíé Toggle Item ESP", function()
    itemEsp = not itemEsp
    if not itemEsp then RemoveESP() return end
    task.spawn(function()
        while itemEsp do
            for _, v in pairs(workspace:GetDescendants()) do
                local n = v.Name:lower()
                if n:find("metal") or n:find("scrap") or n:find("heal") or n:find("bolt") or n:find("log") then
                    CreateESP(v, Color3.fromRGB(100, 255, 100), v.Name)
                end
            end
            task.wait(2)
        end
    end)
end)

-- REST OF YOUR FEATURES (God Mode, Items, Fly, Inf Jump)
-- [Condensed for brevity, same as previous script logic]

-- 1. INF JUMP
local infJumpEnabled = false
UserInputService.JumpRequest:Connect(function()
    if infJumpEnabled and lplayer.Character and lplayer.Character:FindFirstChildOfClass("Humanoid") then
        lplayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
    end
end)
AddBtn(exploitPg, "ü¶ò Toggle Infinite Jump", function() infJumpEnabled = not infJumpEnabled end)

-- 2. NOCLIP
local noclipEnabled = false
RunService.Stepped:Connect(function()
    if noclipEnabled and lplayer.Character then
        for _, v in pairs(lplayer.Character:GetDescendants()) do if v:IsA("BasePart") then v.CanCollide = false end end
    end
end)
AddBtn(exploitPg, "üëª Toggle Noclip", function() noclipEnabled = not noclipEnabled end)

-- 3. BRING ITEMS
local function Bring(name)
    for _, v in pairs(workspace:GetDescendants()) do
        if v.Name:lower():find(name:lower()) and (v:IsA("BasePart") or v:IsA("Model")) then
            local part = v:IsA("Model") and (v.PrimaryPart or v:FindFirstChildWhichIsA("BasePart")) or v
            if part then part.CFrame = lplayer.Character.HumanoidRootPart.CFrame end
        end
    end
end
AddBtn(itemPg, "‚öôÔ∏è Bring Scrap (Metal)", function() Bring("Scrap") Bring("Metal") end)
AddBtn(itemPg, "üî© Bring Bolts", function() Bring("Bolt") end)
AddBtn(itemPg, "ü™µ Bring Logs", function() Bring("Log") end)

-- 4. GOD MODE & RESCUE
local god = false
AddBtn(mainPg, "üõ°Ô∏è God Mode", function() god = not god
    task.spawn(function() while god do if lplayer.Character and lplayer.Character:FindFirstChild("Humanoid") then lplayer.Character.Humanoid.Health = 100 end task.wait(0.1) end end)
end)
AddBtn(mainPg, "üë∂ Rescue All 4 Kids", function()
    local kids = {"Dino Kid", "Kraken Kid", "Squid Kid", "Koala Kid"}
    for _, k in pairs(kids) do for _, v in pairs(workspace:GetDescendants()) do if v.Name == k and v:FindFirstChild("HumanoidRootPart") then v.HumanoidRootPart.CFrame = lplayer.Character.HumanoidRootPart.CFrame + Vector3.new(0, 3, 0) end end end
end)

-- Header & Close
local t = Instance.new("TextLabel", main); t.Size = UDim2.new(1, 0, 0, 45); t.Text = "üêæ White Cat Hub üêæ"
t.TextColor3 = Color3.fromRGB(255, 182, 193); t.Font = "GothamBold"; t.TextSize = 18
local c = Instance.new("TextButton", main); c.Size = UDim2.new(0, 30, 0, 30); c.Position = UDim2.new(1, -35, 0, 10)
c.Text = "X"; c.BackgroundColor3 = Color3.fromRGB(255, 100, 100); c.MouseButton1Click:Connect(function() sg:Destroy() end)
